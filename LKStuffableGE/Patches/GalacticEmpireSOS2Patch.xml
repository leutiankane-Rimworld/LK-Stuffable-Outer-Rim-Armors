<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!--SOS 2 Space Compatability-->

  <!--SOS 2 Space Compat-->
<Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[@Name="OuterRim_ArmorFabricatedBase"]/equippedStatOffsets</xpath>
	<value>
	  <HypoxiaResistance MayRequire="kentington.saveourship2">0.75</HypoxiaResistance>
      <DecompressionResistance MayRequire="kentington.saveourship2">0.75</DecompressionResistance>
      <VacuumSpeedMultiplier MayRequire="kentington.saveourship2">4</VacuumSpeedMultiplier>
	</value>
  </Operation>
  <Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[@Name="OuterRim_HelmetFabricatedBase"]/equippedStatOffsets</xpath>
	<value>
	  <HypoxiaResistance MayRequire="kentington.saveourship2">0.25</HypoxiaResistance>
      <DecompressionResistance MayRequire="kentington.saveourship2">0.25</DecompressionResistance>
      <VacuumSpeedMultiplier MayRequire="kentington.saveourship2">2</VacuumSpeedMultiplier>
	</value>
  </Operation>

	

	<Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[@Name="OuterRim_ArmorFabricatedBase"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="OuterRim_ArmorFabricatedBase"]</xpath>
		<value>
		<comps />
		</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@Name="OuterRim_ArmorFabricatedBase"]/comps</xpath>
	<value>
	<li MayRequire="kentington.saveourship2">
        <compClass>SaveOurShip2.CompEVA</compClass>  
    </li>
    </value>
	</Operation>
	<Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef[@Name="OuterRim_HelmetFabricatedBase"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name=OuterRim_HelmetFabricatedBase"]</xpath>
		<value>
		<comps />
		</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@Name="OuterRim_HelmetFabricatedBase"]/comps</xpath>
	<value>
	<li MayRequire="kentington.saveourship2">
        <compClass>SaveOurShip2.CompEVA</compClass>    
    </li>
    </value>
	</Operation>
</Patch>